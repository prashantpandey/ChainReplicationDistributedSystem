                elif timeout(5): pass                       # break if nothing received till 5 secs
                
                if checkLogFlag == 0:
                    output("ClientId: " + clientId + " Request not performed at the tail: " + str(preReq['reqId']))
                    output("ClientId: " + clientId + " Performing request again: " + str(preReq['reqId']))
                    checkLogFlag = -1
                    idx = findServer(preReq['operation'], preReq['bankId'])
                    p = serverProcessList[idx]
