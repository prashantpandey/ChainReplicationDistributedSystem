import sys

class Pong(process):
    def setup(total_pings): pass

    def main():
        await(len(listof(p, received(('Ping',), from_=p))) == total_pings)

    def receive(msg=('Ping',), from_=p):
        output("Pinged")
        send(('Pong',), to=p)

class Ping(process):
    def setup(p, nrounds): pass

    def main():
        for i in range(nrounds):
            clk = logical_clock()
            send(('Ping',), to=p)
            await(some(received(('Pong',), clk=rclk), has=(rclk > clk)))

    def receive(msg=('Pong',)):
        output("Ponged.")

def main():
    config(clock='Lamport')
    pong = new(Pong, [1], num= 1)
    ping = new(Ping,[pong, 1], num= 1)
    start(pong)
    start(ping)
